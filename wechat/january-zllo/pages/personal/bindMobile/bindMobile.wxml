<!--pages/personal/bindMobile/bindMobile.wxml-->
<van-row class="custom-class" gutter="2">
    <van-col span="24">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <van-cell-group>
                <van-field value="{{ username }}" required clearable label="手机号码" icon="question" placeholder="手机号码" bind:click-icon="onClickIcon">
                    <van-button slot="button" size="small" type="primary">发送验证码</van-button>
                </van-field>
                <van-field value="{{ password }}" type="password" label="密码" placeholder="请输入密码" required border="{{ false }}" />
            </van-cell-group>

            <van-button size="large" type="primary" formType="submit">确定</van-button>
        </form>
    </van-col>
</van-row>
