<!--index.wxml-->
<view class="container">
	<view class="section flex-wrp bc_blue" style="flex-direction:column;"  wx:for="{{merchantList}}">
		<navigator url="../merchant/merchantDetail?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
			<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
				<image class="weui-media-box__thumb" src="{{item.logo}}" />
			</view>
			<view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
				<view class="weui-media-box__title">{{item.name}}</view>
				<view class="weui-media-box__desc">{{item.description}}</view>
			</view>
			<view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
				<image class="weui-media-box__thumb" src="{{item.logo}}" />
			</view>
		</navigator>
	</view>
</view>
